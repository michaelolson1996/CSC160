<UserControl x:Class="Match_Game.Controls.Card"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Match_Game.Controls"
                       Height="100" Width="80">
    <Grid>
        <Button x:Name="btnCard" IsEnabled="{Binding Interactable}" BorderBrush="Black" Background="White" Click="btnCard_Click">
            <Image x:Name="imgCard"  Source="/Resources/card.jpg"/>
        </Button>
        <Label x:Name="lblSymbol" Visibility="Hidden" FontSize="64" FontFamily="WebDings" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Symbol}"/>
    </Grid>
</UserControl>